{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "ZipkinEndpoint": "http://localhost:9412/api/v2/spans",
    "ConfigSection": "ReverseProxy",
    "CorsOrigins": [ "http://localhost:5005" ]
  },
  "ReverseProxy": {
    "Routes": {
      "productdocs": {
        "ClusterId": "products",
        "Match": {
          "Path": "/products/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/products"
          }
        ]
      },
      "orderdocs": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/orders"
          }
        ]
      },
      "products": {
        "ClusterId": "products",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      "orders": {
        "ClusterId": "orders",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "notifications": {
        "ClusterId": "notifications",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      },
      "monitor": {
        "ClusterId": "monitor",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "monitor": {
        "Destinations": {
          "monitor/destination1": {
            "Address": "http://localhost:5005"
          }
        }
      },
      "orders": {
        "Destinations": {
          "orders/destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "products": {
        "Destinations": {
          "products/destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifications/destination1": {
            "Address": "http://localhost:5004"
          }
        }
      }
    }
  }
}
