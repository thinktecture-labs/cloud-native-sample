{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Gateway": {
    "ConfigSection": "ReverseProxy",
    "CorsOrigins": [
      "http://localhost:5005"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "productdocs": {
        "ClusterId": "products",
        "Match": {
          "Path": "/products/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/products"
          }
        ]
      },
      "orderdocs": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/orders"
          }
        ]
      },
      "products": {
        "ClusterId": "products",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      "orders": {
        "ClusterId": "orders",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "notifications": {
        "ClusterId": "notifications",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      },
      "monitor": {
        "ClusterId": "monitor",
        "Match": {
          "Path": "/{**catch-all}"
        }
      },
      "pricewatcher": {
        "ClusterId": "pricewatcher",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/pricewatcher/{**catch-all}"
        }
      },
      "pricedrops": {
        "ClusterId": "pricedrops",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/pricedrops/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "monitor": {
        "Destinations": {
          "monitor/destination1": {
            "Address": "http://order-monitor-client:8080"
          }
        }
      },
      "orders": {
        "Destinations": {
          "orders/destination1": {
            "Address": "http://orders:5000"
          }
        }
      },
      "products": {
        "Destinations": {
          "products/destination1": {
            "Address": "http://products:5000"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifications/destination1": {
            "Address": "http://notification:5000"
          }
        }
      },
      "pricewatcher": {
        "Destinations": {
          "pricewatcher/destination1": {
            "Address": "http://pricewatcher:5000"
          }
        }
      },
      "pricedrops": {
        "Destinations": {
          "pricedrops/destination1": {
            "Address": "http://pricewatcher:5000"
          }
        }
      }
    }
  }
}
