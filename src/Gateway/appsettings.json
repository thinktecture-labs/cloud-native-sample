{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "productdocs": {
        "ClusterId": "products",
        "Match": {
          "Path": "/products/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/products"
          }
        ]
      },
      "orderdocs": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/orders"
          }
        ]
      },
      "products": {
        "ClusterId": "products",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      "orders": {
        "ClusterId": "orders",
        "CorsPolicy": "GatewayPolicy",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "monitor": {
        "ClusterId": "monitor",
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "monitor": {
        "Destinations": {
          "monitor/destination1": {
            "Address": "http://order-monitor-client:80"
          }
        }
      },
      "orders": {
        "Destinations": {
          "orders/destination1": {
            "Address": "http://localhost:5002" 
          }
        }
      },
      "products": {
        "Destinations": {
          "products/destination1": {
            "Address": "http://localhost:5001"
          }
        }
      }
    }
  },
  "Gateway": {
    "DaprEndpoint": "http://localhost:9001",
    "ZipkinEndpoint": "http://localhost:9412/api/v2/spans",
    "ConfigSection" : "ReverseProxy",
    "CorsOrigins": ["http://localhost:5005"]
  }
}
